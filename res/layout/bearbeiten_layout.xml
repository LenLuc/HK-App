<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BearbeitenActivity" >
 <EditText
        android:id="@+id/editBetragAusgabeBearbeiten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1Bearbeiten"
        android:layout_marginTop="91dp"
        android:ems="10"
        android:hint="@string/betrag"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttonFertigBearbeiten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editBetragAusgabeBearbeiten"
        android:layout_alignParentRight="true"
        android:onClick="saveData"
        android:text="@string/fertig" />

    <CheckBox
        android:id="@+id/checkBoxGemeinsamBearbeiten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1Bearbeiten"
        android:text="@string/ja" />

    <CheckBox
        android:id="@+id/checkBoxAusgelegtBearbeiten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/checkBoxGemeinsamBearbeiten"
        android:text="@string/nein" />

    <TextView
        android:id="@+id/textView2Bearbeiten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1Bearbeiten"
        android:layout_alignBottom="@+id/textView1Bearbeiten"
        android:layout_alignRight="@+id/buttonFertigBearbeiten"
        android:layout_marginRight="37dp"
        android:text="@string/getÃ¤tigtVon"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <CheckBox
        android:id="@+id/checkBoxLuciaBearbeiten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkBoxAusgelegtBearbeiten"
        android:layout_alignBottom="@+id/checkBoxAusgelegtBearbeiten"
        android:layout_alignLeft="@+id/checkBoxPietBearbeiten"
        android:text="@string/lucia" />

    <CheckBox
        android:id="@+id/checkBoxPietBearbeiten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkBoxLuciaBearbeiten"
        android:layout_alignLeft="@+id/textView2Bearbeiten"
        android:text="@string/piet" />

    <TextView
        android:id="@+id/textView1Bearbeiten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/gemeinsameAusgabe"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/editDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editBetragAusgabeBearbeiten"
        android:layout_below="@+id/editBetragAusgabeBearbeiten"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/datum"
        android:inputType="date" />

    <Button
        android:id="@+id/buttonAbbrechenBearbeiten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:onClick="abbrechenBearbeiten"
        android:text="@string/abbrechen" />

</RelativeLayout>

